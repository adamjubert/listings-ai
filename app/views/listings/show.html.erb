<div class="w-full max-w-xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Listing Details</h1>
    <%= link_to "Back to Listings", listings_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <% if @listing.summary.nil? %>
      <div class="text-red-600 font-semibold mb-4">No AI summary generated.</div>
    <% else %>
      <div class="mb-4">
        <h2 class="text-md font-semibold text-gray-700 mb-2">AI Summary</h2>
        <ul class="text-gray-800 text-sm space-y-1">
          <% if @listing.day.present? %>
            <li><span class="font-semibold">Day:</span> <%= @listing.day %></li>
          <% end %>
          <% if @listing.time.present? %>
            <li><span class="font-semibold">Time:</span> <%= @listing.time %></li>
          <% end %>
          <% if @listing.price.present? %>
            <li><span class="font-semibold">Price:</span> <%= @listing.price %></li>
          <% end %>
          <% if @listing.title.present? %>
            <li><span class="font-semibold">Title:</span> <%= @listing.title %></li>
          <% end %>
          <% if @listing.location.present? %>
            <li><span class="font-semibold">Location:</span> <%= @listing.location %></li>
          <% end %>
          <% if @listing.categories.present? %>
            <li><span class="font-semibold">Categories:</span> <%= @listing.categories %></li>
          <% end %>
          <% if @listing.description.present? %>
            <li><span class="font-semibold">Description:</span> <%= @listing.description %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <h2 class="text-md font-semibold text-gray-700 mb-2">Original Summary</h2>
      <pre class="bg-gray-100 rounded p-2 text-sm text-gray-700 whitespace-pre-wrap break-words"><%= JSON.pretty_generate(@listing.body) %></pre>
    </div>

    

    <div class="text-xs text-gray-500 mt-4">
      Added <%= time_ago_in_words(@listing.created_at) %> ago
    </div>
  </div>
</div>
