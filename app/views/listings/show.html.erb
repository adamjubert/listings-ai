<div class="w-full max-w-xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Listing Details</h1>
    <%= link_to "Back to Listings", listings_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <% if @most_recent_listing_summary.blank? %>
      <div class="text-red-600 font-semibold mb-4">No AI summary generated.</div>
    <% else %>
      <div class="mb-4">
        <h2 class="text-md font-semibold text-gray-700 mb-2">AI Summary</h2>
        <ul class="text-gray-800 text-sm space-y-1">
          <% if @most_recent_listing_summary.day.present? %>
            <li><span class="font-semibold">Day:</span> <%= @most_recent_listing_summary.day %></li>
          <% end %>
          <% if @most_recent_listing_summary.time.present? %>
            <li><span class="font-semibold">Time:</span> <%= @listing.time %></li>
          <% end %>
          <% if @most_recent_listing_summary.price.present? %>
            <li><span class="font-semibold">Price:</span> <%= @most_recent_listing_summary.price %></li>
          <% end %>
          <% if @most_recent_listing_summary.title.present? %>
            <li><span class="font-semibold">Title:</span> <%= @most_recent_listing_summary.title %></li>
          <% end %>
          <% if @most_recent_listing_summary.location.present? %>
            <li><span class="font-semibold">Location:</span> <%= @most_recent_listing_summary.location %></li>
          <% end %>
          <% if @most_recent_listing_summary.categories.present? %>
            <li><span class="font-semibold">Categories:</span> <%= @most_recent_listing_summary.categories %></li>
          <% end %>
          <% if @most_recent_listing_summary.description.present? %>
            <li><span class="font-semibold">Description:</span> <%= @most_recent_listing_summary.description %></li>
          <% end %>
        </ul>
      </div>

    <div class="mb-4">
      <h2 class="text-md font-semibold text-gray-700 mb-2">AI Model Details</h2>
      <ul class="text-gray-800 text-sm space-y-1">
        <% if @most_recent_listing_summary.model.present? %>
          <li><span class="font-semibold">Model:</span> <%= @most_recent_listing_summary.model %></li>
        <% end %>
        <% if @most_recent_listing_summary.total_tokens.present? %>
          <li><span class="font-semibold">Total Tokens:</span> <%= @most_recent_listing_summary.total_tokens %></li>
        <% end %>
        <% if @most_recent_listing_summary.prompt_tokens.present? %>
          <li><span class="font-semibold">Input Tokens:</span> <%= @most_recent_listing_summary.prompt_tokens %></li>
        <% end %>
        <% if @most_recent_listing_summary.completion_tokens.present? %>
          <li><span class="font-semibold">Output Tokens:</span> <%= @most_recent_listing_summary.completion_tokens %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div>
      <h2 class="text-md font-semibold text-gray-700 mb-2">Original Summary</h2>
      <pre class="bg-gray-100 rounded p-2 text-sm text-gray-700 whitespace-pre-wrap break-words"><%= JSON.pretty_generate(@listing.body) %></pre>
    </div>



    <div class="text-xs text-gray-500 mt-4">
      Added <%= time_ago_in_words(@listing.created_at) %> ago
    </div>
  </div>
</div>
